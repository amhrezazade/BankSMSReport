<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:id="@+id/card_View_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:background="#1a1a1a"
            android:layout_height="wrap_content"
            android:id="@+id/content_item_view">


            <Button
                android:text="Edit"
                android:layout_alignParentRight="true"
                android:layout_width="50dp"
                android:textColor="#ffcc00"
                android:background="#262626"
                android:layout_height="wrap_content"
                android:id="@+id/btnFileContent"
                android:layout_centerVertical="true"
                android:layout_centerInParent="false"
                android:layout_marginTop="0.0dp"
                android:layout_marginBottom="0.0dp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/menu"
                android:id="@+id/ivImageShareContent"
                android:contentDescription="description"
                android:layout_below="@+id/tvTitleContent" />


            <TextView
                android:id="@+id/tvTitleContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is a line of string"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FFFF"
                android:layout_alignParentTop="false"
                android:layout_marginRight="20dp"
                android:layout_marginTop="0.4dp"
                android:padding="10dp" />

            <TextView
                android:id="@+id/tvText"
                android:layout_below="@+id/tvTitleContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="یانک سامان سلام من این مورد را میبینم"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#ffd6cc"
                android:layout_alignParentTop="false"
                android:layout_marginRight="50dp"
                android:layout_marginTop="0.4dp"
                android:padding="10dp"
                android:layout_alignParentEnd="true" />
            
            <TextView
                android:id="@+id/tvTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FOOD"
                android:layout_alignParentEnd="true"
                android:paddingRight="5dp" />

        

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
